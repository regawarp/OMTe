<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".OrderFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_technician"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/tv_order_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@id/img_technician"
            app:layout_constraintTop_toTopOf="@id/img_technician"/>

        <TextView
            android:id="@+id/tv_technician_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_order_code"
            app:layout_constraintLeft_toRightOf="@id/img_technician"/>

        <TextView
            android:id="@+id/tv_order_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@id/img_technician"
            app:layout_constraintBottom_toBottomOf="@id/img_technician"/>

        <ImageButton
            android:id="@+id/img_btn_chat"
            android:layout_width="100dp"
            android:layout_height="64dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/button_to_chat"
            android:background="@drawable/button_border"/>

        <View
            android:id="@+id/v_for_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/img_technician"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageButton
            android:id="@+id/img_btn_frag_order"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v_for_line"
            android:contentDescription="@string/sub_fragment_order"/>

        <View
            android:id="@+id/v_order_check_up"
            android:layout_width="42dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toTopOf="@id/img_btn_frag_order"
            app:layout_constraintBottom_toBottomOf="@id/img_btn_frag_order"
            app:layout_constraintLeft_toRightOf="@id/img_btn_frag_order"
            app:layout_constraintRight_toLeftOf="@id/img_btn_frag_check_up"/>

        <ImageButton
            android:id="@+id/img_btn_frag_check_up"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            app:layout_constraintLeft_toRightOf="@id/img_btn_frag_order"
            app:layout_constraintTop_toBottomOf="@id/v_for_line"
            android:contentDescription="@string/sub_fragment_order"/>

        <View
            android:id="@+id/v_check_up_service"
            android:layout_width="42dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toTopOf="@id/img_btn_frag_order"
            app:layout_constraintBottom_toBottomOf="@id/img_btn_frag_order"
            app:layout_constraintLeft_toRightOf="@id/img_btn_frag_check_up"
            app:layout_constraintRight_toLeftOf="@id/img_btn_frag_service"/>

        <ImageButton
            android:id="@+id/img_btn_frag_service"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            app:layout_constraintLeft_toRightOf="@id/img_btn_frag_check_up"
            app:layout_constraintTop_toBottomOf="@id/v_for_line"
            android:contentDescription="@string/sub_fragment_order"/>

        <View
            android:id="@+id/v_service_finish"
            android:layout_width="42dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toTopOf="@id/img_btn_frag_order"
            app:layout_constraintBottom_toBottomOf="@id/img_btn_frag_order"
            app:layout_constraintLeft_toRightOf="@id/img_btn_frag_service"
            app:layout_constraintRight_toLeftOf="@id/img_btn_frag_finish"/>

        <ImageButton
            android:id="@+id/img_btn_frag_finish"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            app:layout_constraintLeft_toRightOf="@id/img_btn_frag_service"
            app:layout_constraintTop_toBottomOf="@id/v_for_line"
            android:contentDescription="@string/sub_fragment_order"/>

        <FrameLayout
            android:id="@+id/frame_sub_frag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@id/img_btn_frag_order"
            app:layout_constraintLeft_toLeftOf="parent">
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>